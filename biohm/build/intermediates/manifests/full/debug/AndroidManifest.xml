<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shemanigans.mime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_notification"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.shemanigans.mime.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shemanigans.mime.fragments.PairFragment"
            android:label="@string/title_activity_act_and_pair"
            android:parentActivityName="com.shemanigans.mime.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name="com.shemanigans.mime.Pair"
            android:label="@string/title_activity_pair"
            android:parentActivityName="com.shemanigans.mime.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name="com.shemanigans.mime.fragments.ScanFragment"
            android:label="@string/title_activity_scan"
            android:parentActivityName="com.shemanigans.mime.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name="com.shemanigans.mime.NoFragment"
            android:label="@string/title_activity_button_no"
            android:parentActivityName="com.shemanigans.mime.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <service
            android:name="com.shemanigans.mime.services.BluetoothLeService"
            android:enabled="true"
            android:label="@string/service_name_BluetoothLeService" />

        <activity
            android:name="com.shemanigans.mime.activities.OverviewActivity"
            android:label="@string/title_activity_long_term"
            android:launchMode="singleTask"
            android:parentActivityName="com.shemanigans.mime.fragments.ScanFragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".fragments.ScanFragment" />
        </activity>
    </application>

</manifest>